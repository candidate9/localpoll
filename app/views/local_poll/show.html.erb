<% content_for :title, @local_poll.name %>

<article>
  <header><h1>Candidates</h1></header>

  <ul>
    <% @local_poll.candidates.each do |candidate| %>
      <%= content_tag "li" do %>
        <%= content_tag "span", candidate.name, :class => :name %>
        <%= content_tag "span", candidate.affilliation, :class => :affilliation %>
        <%= link_to "Website", candidate.link if candidate.link? %>
      <% end %>
    <% end %>
  </ul>

  <%= link_to "Live here? Vote in our unscientific poll", constituency_local_poll_vote_path(@local_poll.constituency, @local_poll), :class => "action-button" %>

  <span class="or">or</span>

  <span class="alternative-action"><%= link_to "view results", constituency_local_poll_results_path(@local_poll.constituency, @local_poll) %></span>


</article>